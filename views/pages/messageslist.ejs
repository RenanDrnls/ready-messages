<!DOCTYPE html>
<html lang="pt-BR">
    <%- include('../partials/head')%>
    <body>
        <% messages.forEach((message) => { %>
            <div class="message">
                <h2><%= message.title_message %></h2>
                <p><%= message.content_message %></p>
                <a href="/deletemessage/<%= message.id_message %>">
                    <button  class="delMessageBtn" onclick = "confirmDelete()">Deletar</button>
                </a>
                <a href="/edit/<%= message.id_message %>"><button>Alterar dados</button></a>
                <button>Copiar para a área de transferência</button>
            </div>
            <hr>
        <% }) %>
    </body>
</html>